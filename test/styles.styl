// Components
//
// Reusable components that can be used across the site.
// So far this just includes buttons.
//
// Styleguide components.
@import "./components/buttons"

// Forms
//
// Covers styles used for forms, such as the `<input>` and `<select>` elements.
//
// Markup: forms.hbs
//
// Styleguide forms.
@import "./forms/base"

// Mixins
//
// Stylus mixins used in this demo.
//
// Styleguide mixins.

// .colors(bg, color)
//
// Applies foreground and background colors.
//
// bg - Background color; defaults to `#f5f5f5`.
// color - Foreground color; defaults to `#900`.
//
// Styleguide mixins.example.
example(bg = #f5f5f5, color = #900)
  background: bg
  color:      color
